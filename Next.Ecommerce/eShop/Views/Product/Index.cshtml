@using eShop.Models
@model List<Product>

@{
    ViewData["Title"] = "Products";
    var search = ViewData["Search"] as string ?? string.Empty;
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-controller="Product" asp-action="Index" class="mb-3">
    <input type="text" name="search" value="@search" placeholder="Filter by name" />
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price (â‚¬)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
        </tr>
    }
    </tbody>
</table>
